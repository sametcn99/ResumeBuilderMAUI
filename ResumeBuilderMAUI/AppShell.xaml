<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="ResumeBuilderMAUI.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:ResumeBuilderMAUI"
       Shell.FlyoutBackdrop="DarkSlateBlue"
       Shell.TabBarIsVisible="False"
       Title="ResumeBuilderMAUI">
    <FlyoutItem Title="MainPage" FlyoutDisplayOptions="AsMultipleItems" >
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate local:Views.MainPage}"
                      Route="MainPage" />
        <ShellContent Title="Create Resume"
                      ContentTemplate="{DataTemplate local:Views.CreateResumePage}"
                      Route="CreateResumePage" />
    </FlyoutItem>
</Shell>
