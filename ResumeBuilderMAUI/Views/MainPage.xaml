<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ResumeBuilderMAUI.Views.MainPage"
             xmlns:viewmodel="clr-namespace:ResumeBuilderMAUI.ViewModels"
             x:DataType="viewmodel:MainViewModel">
    <ScrollView >
        <VerticalStackLayout 
                             HorizontalOptions="CenterAndExpand"
                             VerticalOptions="CenterAndExpand"
                             Spacing="25">
            <Label Text="Hello!"
                   FontSize="Title"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   />
            <Button Text="Create New Resume"
                    FontSize="Medium"
                    Clicked="OnCreateResumeClicked"
                   />
            <Button Text="View Source Code"
                    Clicked="OnViewSourceCodeClicked"
                   />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
